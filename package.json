{
  "name": "supple",
  "version": "4.0.1",
  "description": "In-browser (S)CSS framework; Fluid, Variable, supple if you will",
  "main": "src/index.scss",
  "repository": "https://github.com/supple-css/supple.git",
  "author": "Bram Smulders <bram@bramsmulders.com>",
  "license": "MIT",
  "keywords": [
    "supple",
    "css",
    "scss",
    "itcss",
    "grid",
    "framework",
    "bem"
  ],
  "scripts": {
    "test": "npm run lint && npm run build && npm run gzip",
    "lint": "stylelint \"**/*.scss\"",
    "gzip": "gzip-size test/css/index.css",
    "postcss": "postcss test/css/**/*.css --replace",
    "sass": "sass src:test/css/ --no-source-map",
    "build": "npm run sass && npm run postcss",
    "start": "nodemon -e scss -x \"npm run test\""
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.12",
    "glob": "^7.1.7",
    "gzip-size-cli": "^5.1.0",
    "nodemon": "^2.0.12",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "postcss-normalize": "^10.0.1",
    "sass": "^1.39.0",
    "stylelint": "^13.13.1",
    "stylelint-config-supple": "^3.0.3",
    "stylelint-scss": "^3.20.1"
  },
  "dependencies": {
    "sass-mq": "^5.0.1"
  }
}
